// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  user_id     Int      @id @default(autoincrement())
  first_name  String   
  last_name   String
  email_id    String   @unique
  last_login  DateTime 
  role        Int
}

model Fab_Weld_Request {
  fw_id             Int     @id @default(autoincrement())
  date_submitted    DateTime
  part_name         String    
  quantity          Int     
  resources_needed  String
  links             String
  date_completed    DateTime
}

model Change_Request {
  cr_id           Int      @id @default(autoincrement())
  date_submitted  DateTime   
  type            CR_Type
  what            String
  why             String
  timeline_impact DateTime
  budget_impact   Int
  scope_impact    String
  docs            String
  date_reviewed   DateTime
  accepted        Boolean
}

model Change {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  age     Int?
  posts   Post[]
  profile Profile?
}

model WBS_Element {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  age     Int?
  posts   Post[]
  profile Profile?
}

model Project {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  age     Int?
  posts   Post[]
  profile Profile?
}

model Work_Package {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  age     Int?
  posts   Post[]
  profile Profile?
}

model Description_Bullet {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  age     Int?
  posts   Post[]
  profile Profile?
}

