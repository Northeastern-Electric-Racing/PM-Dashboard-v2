{
  "name": "pm-site-netlify",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northeastern-web/electric-racing.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/northeastern-web/electric-racing/issues"
  },
  "scripts": {
    "start": "run-p start:**",
    "start:app": "react-scripts start",
    "start:lambda": "netlify-lambda serve src/backend/functions",
    "build": "run-p build:**",
    "build:app": "react-scripts build",
    "build:lambda": "netlify-lambda build src/backend/functions",
    "test": "react-scripts test",
    "coverage": "npm run test -- --coverage",
    "lint": "npx eslint .",
    "migrate": "npx prisma migrate dev --preview-feature --schema=./src/backend/prisma/schema.prisma",
    "postinstall": "npx prisma generate --schema=./src/backend/prisma/schema.prisma",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "ignorePatterns": [
      "**/.github/**",
      "build",
      "coverage",
      "docs",
      "lambda",
      "node_modules",
      "public"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "none",
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!build",
      "!coverage",
      "!lambda",
      "!docs"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@octokit/core": "^3.2.5",
    "@prisma/client": "^2.16.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.6.3",
    "@types/jest": "^26.0.20",
    "@types/react-bootstrap-table-next": "^4.0.10",
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "@types/node": "^12.19.16",
    "@types/react": "^16.14.3",
    "@types/react-dom": "^16.9.10",
    "netlify-cli": "^3.5.0",
    "react": "^17.0.1",
    "react-bootstrap-table-next": "^4.0.3",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "rollup": "^2.38.5",
    "typescript": "^4.1.3",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@babel/plugin-transform-object-assign": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@prisma/cli": "^2.16.0",
    "@types/aws-lambda": "^8.10.71",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "http-proxy-middleware": "^1.0.6",
    "netlify-lambda": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  }
}
